<h1>
  List of all actors
</h1>



<form action="/insert_actor_record" method="post">
  <div>
    <label for="name_box">Name</label>
    <input id="name_box" type="text" name="query_name">
  </div>

  <div>
    <label for="dob_box">Dob</label>
    <input id="dob_box" type="date" name="query_dob">
  </div>
  
   <div>
    <label for="bio_box">Bio</label>
    <textarea id="bio_box" rows="3" name="query_bio"></textarea>
  </div>
  
   <div>
    <label for="image_box">Image</label>
    <input id="image_box" type="text" name="query_image">
  </div>

  <button>
    Create actor
  </button>
</form>





<hr>

<table border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Image
    </th>

    <th>
      Name
    </th>

    <th>
      Dob
    </th>

    <th>
    </th>
  </tr>

  <% @list_of_actors.each do |an_actor| %>
  <tr>
    <td>
      <%= an_actor.id %>
    </td>

    <td>
      <img src="<%= an_actor.image %>" style="width:250px;">
    </td>

    <td>
      <%= an_actor.name %>
    </td>

    <td>
      <%= an_actor.dob %>
    </td>

    <td>
      <a href="/actors/<%= an_actor.id %>">
        Show details
      </a>
    </td>
  </tr>
  <% end %>
</table>
